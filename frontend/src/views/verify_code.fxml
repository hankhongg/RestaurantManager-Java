<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.VerifyCodeController">
    <children>
        <VBox alignment="CENTER"
              stylesheets="@../values/forget_password.css"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              spacing="20" style="-fx-background-color: transparent;">

            <HBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="800.0">
                <!-- Verify Container -->
                <VBox fx:id="verifyContainer"
                      alignment="TOP_CENTER"
                      spacing="20"
                      prefHeight="318.0"
                      prefWidth="659.0"
                      style="-fx-background-color: #f9f9f9; -fx-border-color: #E0E0E0; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-padding: 50px;">

                    <Label styleClass="label_text" text="Nhập mã xác nhận" />
                    <Label styleClass="sub-label" text="Hệ thống đã gửi mã xác nhận đến email của bạn!" />
                    <Label styleClass="sub-label" text="Vui lòng kiểm tra email và nhập mã xác nhận để khôi phục tài khoản của bạn." />

                    <!-- Input -->
                    <StackPane alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="618.0" styleClass="input-stack">
                        <children>
                            <TextField fx:id="codeField"
                                       prefHeight="42.0" prefWidth="554.0"
                                       promptText="Nhập mã xác nhận"
                                       styleClass="text-field-with-icon"
                                       onAction="#handleVerifyCode">
                                <font>
                                    <Font name="Segoe UI" size="12.0" />
                                </font>
                            </TextField>
                        </children>
                    </StackPane>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="30">
                        <Button fx:id="btnReturnEnterEmail"
                                text="Nhập lại email"
                                onMouseClicked="#handleReturnEnterEmail"
                                prefWidth="300.0"
                                styleClass="button1"
                                style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8px; -fx-pref-height: 40px; -fx-font-weight: bold;" />

                        <Button fx:id="btnVerify"
                                text="Xác nhận"
                                onMouseClicked="#handleVerifyCode"
                                prefWidth="300.0"
                                styleClass="button1"
                                style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8px; -fx-pref-height: 40px; -fx-font-weight: bold;" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

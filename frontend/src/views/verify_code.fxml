    <children>
        <VBox alignment="TOP_CENTER" stylesheets="@../values/forget_password.css" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

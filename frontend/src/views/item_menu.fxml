<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="208.0" prefWidth="231.0" stylesheets="@../values/menu_style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ItemMenu">
   <children>
      <VBox prefHeight="219.0" prefWidth="231.0" styleClass="fruit-background">
         <children>
            <HBox alignment="CENTER" prefHeight="142.0" prefWidth="231.0">
               <children>
                  <StackPane alignment="BOTTOM_CENTER" prefHeight="142.0" prefWidth="199.0">
                     <children>
                        <ImageView fx:id="itemImage" fitHeight="165.0" fitWidth="199.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../imgfood/bunBoHue.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="itemPriceLabel" styleClass="menu-lblPrice" stylesheets="@../values/menu_style.css" text="30,0000">
                           <font>
                              <Font name="Cambria" size="28.0" />
                           </font>
                           <StackPane.margin>
                              <Insets bottom="2.0" />
                           </StackPane.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </StackPane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="231.0" styleClass="menu-lblName" stylesheets="@../values/menu_style.css">
               <children>
                  <Label fx:id="itemNameLabel" text="Bún bò Huế">
                     <font>
                        <Font name="Cambria Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

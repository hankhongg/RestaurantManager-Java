<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.SendEmailController">
    <children>
        <VBox fx:id="rootVBox" alignment="TOP_CENTER"
              stylesheets="@../values/forget_password.css"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              style="-fx-background-color: transparent; -fx-padding: 50px;">
            <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
                <HBox fx:id="formContainer" alignment="TOP_CENTER" prefHeight="400" prefWidth="800" spacing="20"
                      style="-fx-background-color: transparent; -fx-padding: 20px;">
                    <!-- Form Card -->
                    <VBox fx:id="formCard" alignment="TOP_CENTER" prefHeight="318.0" prefWidth="659.0" spacing="20.0"
                          style="-fx-background-color: #f9f9f9; -fx-border-radius: 12px; -fx-background-radius: 12px; -fx-padding: 50px;">
                        <Label fx:id="lblTitle" styleClass="label_text" text="Tìm kiếm tài khoản" />
                        <Label fx:id="lblSubtitle" styleClass="sub-label" text="Nhập email để tìm kiếm tài khoản của bạn" />

                        <!-- Email input -->
                        <StackPane fx:id="stackEmail" alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="618.0"
                                   styleClass="input-stack">
                            <children>
                                <TextField fx:id="emailField" promptText="Nhập email ..."
                                           prefHeight="42.0" prefWidth="554.0"
                                           styleClass="text-field-with-icon">
                                    <font>
                                        <Font name="Segoe UI" size="12.0" />
                                    </font>
                                </TextField>
                                <ImageView fx:id="emailIcon" fitHeight="30.0" fitWidth="30.0"
                                           pickOnBounds="true" preserveRatio="true"
                                           styleClass="input-icon">
                                    <image>
                                        <Image url="@../img/email_icon.png" />
                                    </image>
                                    <StackPane.margin>
                                        <Insets right="12.0" />
                                    </StackPane.margin>
                                </ImageView>
                            </children>
                        </StackPane>

                        <!-- Gửi email button -->
                        <Button fx:id="btnSendEmail"
                                text="Gửi email"
                                onAction="#handleSendEmail"
                                prefWidth="618.4"
                                styleClass="button1"
                                style="-fx-background-color: #2C3E50; -fx-text-fill: white;
                                       -fx-font-size: 15px; -fx-background-radius: 8px;
                                       -fx-pref-height: 40px; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
